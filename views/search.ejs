<%- include("partials/header"); -%>

<!-- Title -->
<div>
  <% if (query) { %>
  <h1>Search results for "<%= query %>"</h1>
<% } else if (category) { %>
  <h1>Posts in category "<%= category %>"</h1>
<% } %>

  </div>

<section class="Blogposts">
