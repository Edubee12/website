<%- include("partials/header") -%>

    <h1 class="mb-4">Edit Article</h1>

  <form method="POST" action="/edit/<%= post.slug %>">
    <div class="form-group">
      <div class="">
        <label for="title">Title</label>
        <input type="text" name="title" value="<%= post.title %>" required>
      </div>
      <label for="content">Content</label>
      <textarea class="form-control" name="content" rows="8" cols="25" required><%= post.content %></textarea>

      <div class="">
        <label for="categories">Categories</label>
        <input type="text" name="categories" value="<%= post.categories.join(', ') %>">
        <small class="form-text text-muted">Enter comma separated categories</small>
      </div>
    </div>
    <button type="submit">Save</button>
  </form>
<%- include("partials/footer1") -%>
