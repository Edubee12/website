            <li><a href="/blog?page=14">2021</a></li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <!-- //pagination -->
  <nav>
    <ul class="pagination justify-content-center">
      <% if (current > 1) { %>
      <li class="page-item">
        <a class="page-link" href="/blog?page=<%= current - 1 %>">&laquo;</a>
      </li>
      <% } %>
      <% for (let i = 1; i <= pages; i++) { %>
      <% if (i === current) { %>
      <li class="page-item active">
        <span class="page-link"><%= i %></span>
      </li>
      <% } else { %>
      <li class="page-item">
        <a class="page-link" href="/blog?page=<%= i %>"><%= i %></a>
      </li>
      <% } %>
      <% } %>
      <% if (current < pages) { %>
      <li class="page-item">
        <a class="page-link" href="/blog?page=<%= current + 1 %>">&raquo;</a>
      </li>
      <% } %>
    </ul>
  </nav>



</section>

